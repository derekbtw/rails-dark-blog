<%= form_with model: @article, local: true do |form| %>

  <% if @article.errors.any? %>
    <div id="error_explanation" class="fadeInUp">
      <h2 class="text-warning">
        <%= pluralize(@article.errors.count, "error") %> prohibited 
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li class="text-danger"><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group fadeInUp">
    <%= form.label :title %>
    <%= form.text_field :title, placeholder: "Article title", autocomplete: "off", :class => 'form-control p-3 shadow-sm' %>
  </div>

  <div class="form-group fadeInUp">
    <%= form.label :content %>
    <%= form.text_area :text, :rows => '10', placeholder: "Write some content...", :class => 'form-control p-3 shadow-sm' %>
  </div>

  <div class="form-group fadeInUp">
    <%= form.submit :class => 'btn btn-outline-primary' %>
  </div>

<% end %>
