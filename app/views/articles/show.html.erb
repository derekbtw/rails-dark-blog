<div class="container">
  <article class="py-5" id="article-full">
    <%= link_to '❮ Back', articles_path, :class => 'btn btn-link mr-2' %>
    <%= link_to 'Edit', edit_article_path(@article), :class => 'btn btn btn-link text-hover-info float-right mx-2' %>

    <h1 class="py-4 article-title"><%= @article.title %></h1>

    <div class="card mb-4 shadow-sm fadeInUp">
      <div class="card-body">
        <p class="card-text">
          <%= @article.text %>
        </p>
      </div>
    </div>

    <hr class="my-5 fadeInUp"/>

    <h4 class="mb-4 text-white fadeInUp">Comments</h4>
    <%= render @article.comments %>

    <h5 class="mt-5 mb-4 pt-4 text-white fadeInUp">Add a comment</h5>
    <%= render 'comments/form' %>
  </article>
</div>
