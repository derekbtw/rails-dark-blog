<%= form_with(model: [ @article, @article.comments.build ], local: true) do |form| %>
  <div class="fadeInUp">
    <div class="form-group w-25" id="comment-name">
      <%= form.label :name %>
      <%= form.text_field :commenter, placeholder: "Johnny Appleseed", autocomplete: "off", :class => 'form-control shadow-sm' %>
    </div>

    <div class="form-group w-75 mb-3" id="comment-body">
      <%= form.label :comment %>
      <%= form.text_area :body, :rows => '3', placeholder: "Write some content...", :class => 'form-control shadow-sm' %>
    </div>

    <%= form.submit 'Submit Comment', :class => 'btn btn-outline-primary mt-1' %>
  </div>
<% end %>
